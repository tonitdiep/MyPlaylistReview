<%= render partial: "layouts/errors", locals: {object: @review}%>

<%= form_for([@playlist, @review]) do |f| %>

<% unless @playlist %>

    Select Playlist Title: <%= f.collection_select :playlist_id, Playlist.all, :id, :title %><br><br>

<% else %>

  <%= f.hidden_field :playlist_id %>
  
    <% end %>

    <%= f.label :rating %>
    <%= f.number_field :rating%><br><br>

    <%= f.label :comment %>
    <%= f.text_area :comment %><br><br>

    <%= f.submit "Add Review", data: { confirm: 'Check review before submission.'} %>
<% end %>

